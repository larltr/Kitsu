<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/materialCardView"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_in_one_hundred_eighteen_dp"
    android:layout_margin="@dimen/size_in_two_dp"
    app:cardCornerRadius="@dimen/size_in_five_dp">

    <ImageView
        android:id="@+id/item_character_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        tools:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/item_character_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:gravity="center"
        android:padding="@dimen/size_in_five_dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        tools:text="Centaur" />

    <ProgressBar
        android:id="@+id/progress_bar_item"
        android:layout_width="@dimen/size_in_eighty_five"
        android:layout_height="@dimen/size_in_eighty_five"
        android:layout_gravity="center" />

</com.google.android.material.card.MaterialCardView>